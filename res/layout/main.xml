<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/bg3">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.221">

        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.221"
                android:src="@drawable/fangjian"/>

        <!--<ImageView-->
                <!--android:id="@+id/imageView2"-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_marginLeft="300dip"-->
                <!--android:layout_marginTop="50dip"-->
                <!--android:src="@drawable/daohang_youshang"/>-->

    </RelativeLayout >


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器IP:"/>

        <EditText
                android:id="@+id/edit_Server_Ip"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="10.202.147.98"
                android:gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口:"/>

        <EditText
                android:id="@+id/edit_Server_Port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="54321"
                android:inputType="number"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_tcpServerConn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接服务器"/>
        <Button
                android:id="@+id/btn_tcpServerClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="断开服务器"/>
        <Button
                android:id="@+id/btn_startLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始定位"/>
        <Button
                android:id="@+id/btn_tcpClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除数据"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.15">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="实时采集当前位置信号强度："/>
        <TextView
                android:id="@+id/txt_ServerRcv"
                android:layout_width="fill_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:background="#87CEFA"
        />

    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.15">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="当前位置定位坐标："/>
        <TextView
                android:id="@+id/txt_Location"
                android:layout_width="fill_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:background="#87CEFA"
        />

    </LinearLayout>

</LinearLayout>